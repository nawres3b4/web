{% extends 'base1.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>les demandes papiers administratifs</h1>

    <table id="datatablesSimple" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.getType() }}</td>
                <td>
                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">envoyer mail</a>
                    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_new') }}">Create new</a>
    <a href="{{ path('app_salaire_index') }}">Back</a>
{% endblock %}
